pipeline {
  agent any  
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Scan') {
      steps {

        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        withSonarQubeEnv(installationName: 'SonarQubeLocalServer') { 
          bat 'mvn clean -Dsonar.sources=. \
          -Dsonar.sources=. \
          -Dsonar.tests=. \
          -Dsonar.test.inclusions=**/*Test*/** \
          -Dsonar.exclusions=**/*Test*/** \
          -Dsonar.java.binaries=target \
          -Dsonar.organization=Medata \
          -Dsonar.host.url=http://localhost:9000 \
          -Dsonar.projectKey=interview-pipeline \
          -Dsonar.login=admin \
          -Dsonar.password=sonar \
          org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar'
        }
      }
    }
  }
}
